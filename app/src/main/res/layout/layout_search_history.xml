<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="searchHistory"
            type="com.android.kotlin.familymessagingapp.data.local.room.SearchHistoryEntity" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_history" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@{searchHistory.text}"
            tools:text="@string/author" />

        <ImageView
            android:id="@+id/ivPush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/push_text_to_search_box"
            android:padding="8dp"
            android:src="@drawable/ic_north_west" />

    </LinearLayout>

</layout>
